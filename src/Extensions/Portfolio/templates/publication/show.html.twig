{% extends 'admin/layout.html.twig' %}

{% block title %}Publication{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="text-center">
            <h1>Publication: {{ publication.labels.fr_FR }}</h1>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-3">
                <b>Code:</b> {{ publication.code }}
            </div>
            <div class="col-md-3">
                <b><span class="{{ publication.online ? 'text-success' : 'text-danger' }}">{{ publication.online ? 'Online' : 'Offline' }}</span></b>
            </div>
            <div class="col-md-6">
                <b>URL:</b> {{ publication.slug }}
            </div>
            <div class="col-md-6">
                <b>Tags:</b> {% for tag in publication.tags %}<span class="badge badge-info m-2">{{ tag }}</span>{% endfor %}
            </div>
        </div>

        <div class="row">
            <div class="text-justify col-md-12">
                <h3>Short description:</h3>
                <p>{{ publication.descriptions.fr_FR|split('!!end_short!!')[0]|nl2br|raw }}</p>
            </div>
            <div class="text-center col-md-12">
                <h1>{{ publication.labels.fr_FR }}</h1>
                <img src="{{ asset(publication.coverImage) }}" />
            </div>
            <div class="text-justify col-md-12">
                <p>
                    {{ publication.descriptions.fr_FR|split('!!end_short!!')[1]|nl2br|raw }}
                </p>
            </div>
        </div>
    </div>

    <div class="row pt-4">
        <div class="col-md-4 text-left"><a class="btn btn-secondary" href="{{ path('publication_index') }}">back to list</a></div>
        <div class="col-md-4 text-center"><a class="btn btn-primary" href="{{ path('publication_edit', {'id': publication.id}) }}">edit</a></div>
        <div class="col-md-4 text-right">{{ include('@damnPortfolio/publication/_delete_form.html.twig') }}</div>
    </div>
{% endblock %}

