{% form_theme form 'bootstrap_4_layout.html.twig' %}
{{ form_start(form) }}
{{ form_row(form._token) }}
<div class="alert">
    {{ form_errors(form) }}
</div>
<div class="row">
    <div class="col-md-4">
        {{ form_row(form.code) }}
    </div>
    <div class="col-md-4" id="some-custom-id">
        {{ form_row(form.slug) }}
    </div>
    <div class="col-md-4" id="some-custom-id">
        {{ form_row(form.online) }}
    </div>
    <div class="col-md-6" id="some-custom-id">
        {{ form_row(form.link) }}
    </div>
    <div class="col-md-6" id="some-custom-id">
        {{ form_row(form.type) }}
    </div>
</div>
<div id="labels">
    <span style="font-size: 24px;">Labels</span>
    {% for locale, value in form.labels %}
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" id="">{{ locale }}</span>
            </div>
            <input type="text" name="son[labels][{{ locale }}]" value="{% if son.labels[locale] is defined %}{{ son.labels[locale] }}{% endif %}" class="form-control">
        </div>
    {% endfor %}
</div>
<hr>
<div id="descriptions">
    <span style="font-size: 24px;">Descriptions</span>
    {% for locale, value in form.descriptions %}
        <div class="form-group">
            <label for="son[descriptions][{{ locale }}]">{{ locale }}</label>
            <textarea class="form-control" id="son[descriptions][{{ locale }}]" name="son[descriptions][{{ locale }}]" rows="3">{% if son.descriptions[locale] is defined %}{{ son.descriptions[locale] }}{% endif %}</textarea>
        </div>
    {% endfor %}
</div>
<br>
{{ form_row(form.tagsText) }}
<div class="text-center">
    <button class="btn btn-secondary ">{{ button_label|default('Save') }}</button>
</div>
{# don't render unrendered fields #}
{{ form_end(form, {'render_rest': false}) }}