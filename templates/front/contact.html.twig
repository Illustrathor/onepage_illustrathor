{% extends 'front/layout/main.layout.html.twig' %}

{% block content %}
   <div class="container">
       <!--Section: Contact v.2-->
       <section class="mb-4">
           {% if message is defined %}<span class="alert alert-success">{{ message }}</span>{% endif %}
           <!--Section heading-->
           <h2 class="h1-responsive font-weight-bold my-4">Contact</h2>
           <!--Section description-->
           <p class=" w-responsive mx-auto mb-5">Available for collaboration and request.</p>

           <div class="row">

               <!--Grid column-->
               <div class="col-md-9 mb-md-0 mb-5">
                   {% form_theme form 'bootstrap_4_layout.html.twig' %}
                   {{ form_start(form) }}
                   <div class="row">
                       <div class="col">{{ form_row(form.name) }}</div>
                       <div class="col">{{ form_row(form.firstname) }}</div>
                   </div>
                   <div class="row">
                       <div class="col">{{ form_row(form.email) }}</div>
                       <div class="col">{{ form_row(form.phone) }}</div>
                   </div>
                   {{ form_row(form.content) }}
                   <div style="text-align: center">
                       <button class="btn btn-success">{{ button_label|default('Send') }}</button>
                   </div>
                   {{ form_end(form) }}
               </div>
               <!--Grid column-->
               <!--Grid column-->
               <div class="col-md-3 text-center">
                   <ul class="list-unstyled mb-0">
                       <li><i class="fas fa-map-marker-alt fa-2x"></i>
                           <p>{{ getConfig('site_informations').parameters.contact_address }}</p>
                       </li>

                       {% if getConfig('site_informations').parameters.contact_phone is defined and getConfig('site_informations').parameters.contact_phone != "" %}
                       <li><i class="fas fa-phone mt-4 fa-2x"></i>
                           <p>{{ getConfig('site_informations').parameters.contact_phone }}</p>
                       </li>
                       {% endif %}

                       <li><i class="fas fa-envelope mt-4 fa-2x"></i>
                           <p>{{ getConfig('site_informations').parameters.contact_email }}</p>
                       </li>
                   </ul>
               </div>
               <!--Grid column-->

           </div>

       </section>
   </div>
    <!--Section: Contact v.2-->
{% endblock %}

{% block title %}
    Contact - {{ parent() }}
{% endblock %}
